{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-3">
    <h2>Подписка на услугу - {{ service.name }}</h2>
    <div class="mt-3 justify-content-center">
        Стоимость составляет {{ service.price }} руб. / {{ service.unit }}
    </div>
{{ form_start(subscriptionForm) }}
    {{ form_widget(subscriptionForm) }}
    <button type="button" class="btn btn-danger btn-sm">Отмена</button>
    <button type="submit" class="btn btn-primary btn-sm">Подписаться</button>
    {{ form_end(subscriptionForm) }}


</div>
{% endblock %}


