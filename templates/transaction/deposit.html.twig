{% extends 'base.html.twig' %}

{% block body %}
    <div class="container justify-content-center"
    <div class="padding">
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <strong>Пополнение с карты</strong>
                        <small>введите данные Вашей карты</small>
                    </div>
                    <form method="post">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="name">Сумма для зачисления</label>
                                    <input class="form-control" id="name" type="text" placeholder="Введите сумму в рублях" name="deposit" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="ccnumber">Номер карты</label>
                                    <div class="input-group">
                                        <input class="form-control" type="text" placeholder="0000 0000 0000 0000" autocomplete="email" value="1234 5678 9012 3456">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4">
                                <label for="ccmonth">Месяц</label>
                                <select class="form-control" id="ccmonth">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                    <option>6</option>
                                    <option>7</option>
                                    <option>8</option>
                                    <option>9</option>
                                    <option>10</option>
                                    <option>11</option>
                                    <option selected>12</option>
                                </select>
                            </div>
                            <div class="form-group col-sm-4">
                                <label for="ccyear">Год</label>
                                <select class="form-control" id="ccyear">
                                    <option selected>2021</option>
                                    <option>2022</option>
                                    <option>2023</option>
                                    <option>2024</option>
                                    <option>2025</option>
                                    <option>2027</option>
                                    <option>2028</option>
                                </select>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label for="cvv">CVV/CVC</label>
                                    <input class="form-control" id="cvv" type="text" placeholder="123" value="123">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-sm btn-success float-right" type="submit">
                            <i class="mdi mdi-gamepad-circle"></i>Пополнить</button>
                        <button class="btn btn-sm btn-danger" type="button" onclick="history.back();">
                            <i class="mdi mdi-lock-reset"></i>Отмена</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
    <link href="/{{ asset('css/card.css') }}" rel="stylesheet">
{% endblock %}

